<h1 class="subtitle">	Edit Yourself </h1>
<div class="form">

	<% user_path @user %>
	
		<%= form_for @user do |f| %>

		<%= f.text_field :first_name, placeholder: @user.first_name, class: "form-control"%><br>
		<%= f.text_field :last_name, placeholder: @user.last_name, class: "form-control"%><br>
		<%= f.text_field :email, placeholder: @user.email, class: "form-control"%><br>
		<%= f.text_field :image_url, placeholder: @user.image_url, class: "form-control"%><br>
		<%= f.submit "Update Yourself!", class: "form-control btn btn-success" %>

		<% end %>

</div>
